<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_menus"
    android:layout_width="match_parent"
    android:layout_height="54dip"
    android:layout_alignParentBottom="true"
    android:background="#ffffff">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="53dip"
        android:background="#ffffff"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/layout_01"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_01"
                    android:layout_width="21dip"
                    android:layout_height="21dip"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/txt_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_01"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dip"
                    android:text="养号"
                    android:textSize="12sp" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center">


            <LinearLayout
                android:id="@+id/layout_02"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_02"
                    android:layout_width="23dip"
                    android:layout_height="23dip"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/txt_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_02"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dip"
                    android:text="功能"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/layout_03"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_03"
                    android:layout_width="23dip"
                    android:layout_height="23dip"
                    android:layout_centerHorizontal="true"
                     />

                <TextView
                    android:id="@+id/txt_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_03"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dip"
                    android:text="介绍"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/layout_04"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_04"
                    android:layout_width="23dip"
                    android:layout_height="23dip"
                    android:layout_centerHorizontal="true"
                     />

                <TextView
                    android:id="@+id/txt_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_04"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dip"
                    android:text="我"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="0.7dip"
        android:background="#d0d0d0" />
</RelativeLayout>